                                            keepButtonText={`Keep My ${plans[1].title} Plan`}
                                            continueButtonText="Continue with Cancellation"
                                            finalTitle="Final Step - Confirm Cancellation"
                                            finalSubtitle="This action will immediately cancel your subscription"
